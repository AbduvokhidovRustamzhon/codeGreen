{{/* берём шаблон base и встраиваем туда block body */}}
{{template "base" . }}
{{define "body"}}
    <div class="container">
        <div class="row">
            <div style="color: lawngreen" align="center" class="col"><h1>EcoDecor</h1></div>
        </div>
        <div class="row">
            <div class="col">
                <form action="/admin/burgers/save" method="post" enctype="multipart/form-data">
                    {{/* mime type */}}
                    <input type="file" name="image" accept="image/*"/>
                        <input type="hidden" name="action" value="save" >
                        <input type="text" name="name" placeholder="Название продукта">
                        <input type="text" name="phone" placeholder="Номер телефон продавца">
                        <input type="number" name="price" placeholder="Цена продукта">
                    <button  class="btn btn-secondary">Добавить</button>
                </form>
            </div>
        </div>
        {{/*  Emmet: .row > .col + Tab */}}
        <div class="row">
            {{ range .Burgers }}
                <div class="col-4">
                    <div class="card">
                        <img src="../media/{{ .FileName }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ .Name }}</h5>
                            <h5 class="card-title">{{ .Phone }}</h5>
                            <p class="card-text">
                            <h3><span class="badge badge-pill badge-danger">{{ .Price }} $</span></h3></p>
                            <form method="post" action="/admin/burgers/remove">
                                <input type="hidden" name="id" value="{{.Id}}">
                                <button class="btn btn-primary">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{ end }}
        </div>
    </div>
{{end}}
